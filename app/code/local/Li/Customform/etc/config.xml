<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Li_Customform>
            <version>0.0.2</version>
        </Li_Customform>
    </modules>
    <global>
        <blocks>
            <customform>
                <class>Li_Customform_Block</class>
            </customform>
        </blocks>
        <helpers>
            <customform>
                <class>Li_Customform_Helper</class>
            </customform>
        </helpers>
        <models>
            <customform>
                <class>Li_Customform_Model</class>
                <resourceModel>customform_resource</resourceModel>
            </customform>
            <!--for database-->
            <customform_resource>
                <class>Li_Customform_Model_Resource</class>
                <entities>
                    <subscription>
                        <table>customform_subscription</table>
                    </subscription>
                </entities>
            </customform_resource>
        </models>
        <resources>
            <customform_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </customform_write>
            <customform_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </customform_read>
            <customform_setup>
                <setup>
                    <!--configures the relation with the Li_Customform module-->
                    <module>Li_Customform</module>
                    <!--<class>Mage_Eav_Model_Entity_Setup</class>-->
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </customform_setup>
        </resources>
    </global>
    <frontend>
        <routers>
            <customform>
                <use>standard</use>
                <args>
                    <module>Li_Customform</module>
                    <frontName>customform</frontName>
                </args>
            </customform>
        </routers>
        <layout>
            <updates>
                <customform>
                    <!--file in theme-->
                    <file>customform.xml</file>
                </customform>
            </updates>
        </layout>
        <translate>
            <modules>
                <Li_Customform>
                    <files>
                        <default>Li_Customform.csv</default>
                    </files>
                </Li_Customform>
            </modules>
        </translate>
    </frontend>
</config>